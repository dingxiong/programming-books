{
  "name": "programming-books",
  "packageManager": "yarn@4.10.3",
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2"
  },
  "scripts": {
    "prepare": "husky",
    "format-all": "prettier --write 'cpp-book/*'",
    "format": "prettier --write"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx,html,json,yaml,css}": "prettier --write",
    "*.md": [
      "prettier --write"
    ]
  }
}
